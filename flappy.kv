<Player>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<FlappyGame>:
    Button:
        text: 'Esquerda'
        size_hint: None, None
        size: 100, 50
        pos: 100, 50
        on_press: root.velocity_x = -5
        on_release: root.velocity_x = 0
        
    Button:
        text: 'Direita'
        size_hint: None, None
        size: 100, 50
        pos: root.width - self.width - 100, 50
        on_press: root.velocity_x = 5
        on_release: root.velocity_x = 0
